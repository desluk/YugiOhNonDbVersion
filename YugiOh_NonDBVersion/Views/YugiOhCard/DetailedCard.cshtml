@model YugiOhDetailCardModel

<form method = "post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@Model.name</h2>
            <hr/>
        </div>
        <div class="col-8">
            <a asp-controller="YugiOhCard" asp-action="RefreshCard" asp-route-cardName="@Model.name" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Refresh Card
            </a>
        </div>
        <div asp-validation-summary="All"></div>
      <br/>
      <table class="table table-bordered table-striped" style="width:100%">
          <thead>
          <tr>
              <th>Description</th>
              <th>Image</th>
              <th>Sets</th>
              <th>Price</th>
          </tr>
          </thead>
           <tbody>
           <tr width="100%">
                      
                      <td style="width:30%">@Model.desc</td>
               <td>
                   @foreach (string img in Model.largeImages)
                   {
                       <img src="@img"/>    
                       <br/>
                       <br/>
                   }
                   
               </td>
               <td> @foreach (string obj in Model.setNames)
                    {
                        <p>@obj</p>
                        <br/>
                    }
               </td>
               @* List of items within the Sets Price. *@
               @* 0: Amazon, 1: tcgPlayer, 2: market, 3: eBay, 4: cool *@
               <td>
                   @foreach (double obj in Model.prices)
                   {
                       <p>R @Math.FusedMultiplyAdd(obj,20.0,0)</p>
                       <br/>
                   }
               </td>
           </tr>
           
              </tbody>
      </table>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="YugiOhCard" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>